[*.java]
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true
kotlin_imports_layout=ascii
# Argument wrapping currently disabled due to
#   https://github.com/pinterest/ktlint/issues/926
disabled_rules=experimental:argument-list-wrapping

[*.kts]
# Comma-separated list of rules to disable
# AnnotationRule currently disabled due to
#   https://github.com/pinterest/ktlint/issues/745
disabled_rules=experimental:annotation,experimental:argument-list-wrapping
